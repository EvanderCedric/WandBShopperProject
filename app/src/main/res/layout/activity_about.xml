<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".AboutPage">

    <com.example.projectux.NavBarTop
        android:id="@+id/navBarTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />

    <com.example.projectux.NavBarBot
        android:id="@+id/navBarBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/wb_shoper_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W&amp;B Shopper"
        android:textSize="50dp"
        android:textColor="@color/darkerbrown"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />


    <ImageView
        android:id="@+id/logoPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wblogo"
        android:layout_below="@id/wb_shoper_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/company_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoPic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="W&amp;B Company\nJln. Rangga II, Mangga Dua, \nJakarta, 56789."
        android:textSize="16dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/company_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="App v 17.0.1.3 (Stable)"
        android:textSize="14dp"
        android:textStyle="bold" />
</RelativeLayout>
