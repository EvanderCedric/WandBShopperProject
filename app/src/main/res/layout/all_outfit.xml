<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_krem">
    <TextView
        android:id="@+id/ppText"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="These Outfits Trends the World Right Now!"/>
    <androidx.viewpager2.widget.ViewPager2
        android:layout_below="@id/ppText"
        android:id="@+id/viewpager_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/viewpager_all"
        android:id="@+id/best_seller_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>